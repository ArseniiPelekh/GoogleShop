@model IEnumerable<AvatarFileModel>
    <div>
        <form asp-action="AddFile" asp-controller="AvatarFile" method="post" enctype="multipart/form-data">
            <p>
                <label>Имя</label>
                <input name="Name" class="form-control" />
            </p>
            <p>
                <label>File</label>
                <input name="File" type="file" class="form-control" />
            </p>
            <p>
                <input type="submit" value="Добавить" />
            </p>
        </form>
    </div>
<h3>Все файлы</h3>
@foreach (var p in Model)
{
<div>
    <h4>@p.Name</h4>
    @if (p.FileType != null)
    {
        <img style='width:120px; height:100px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.FileType))" />
    }
</div>
}
